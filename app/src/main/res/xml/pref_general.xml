<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="general_settings"
        android:title="@string/general">

        <SwitchPreference
            android:key="notifications_switch"
            android:title="@string/pref_title_notifications"
            android:summary="@string/pref_description_notifications"
            android:defaultValue="true" />

        <net.jayschwa.android.preference.SliderPreference
            android:key="alert_radius_slider"
            android:title="@string/pref_title_notification_radius"
            android:summary="@array/pref_array_notification_radius"
            android:defaultValue="@string/pref_notification_radius_default"
            android:dialogMessage="@string/pref_description_notification_radius" />
    </PreferenceCategory>
</PreferenceScreen>
